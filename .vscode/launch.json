    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release executable 'martypc'",
            "cargo": {
                "args": [
                    "build",
                    "-r",
                    "--bin=martypc",
                    "--package=martypc"
                ],
                "filter": {
                    "name": "martypc",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug,naga=error,wgpu_core=error,martypc::cpu=debug,martypc::machine=trace,martypc::dma=debug,martypc::pit=trace,martypc::cga=trace,martypc::hdc=trace",
                "RUST_LOG_STYLE": "always",
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release executable 'martypc' release candidate",
